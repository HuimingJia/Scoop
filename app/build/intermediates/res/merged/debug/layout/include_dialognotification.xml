<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="450dp"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/dialog_edittext_enter"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:background="@drawable/edittext_default"
        android:gravity="top"
        android:hint="输入内容"
        android:imeOptions="actionNext"
        android:inputType="textMultiLine"
        android:padding="5dp"
        android:singleLine="true" />

    <ListView
        android:id="@+id/dialog_simplelist_list"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_dialog_simplelist"
        android:cacheColorHint="#00000000"
        android:divider="@color/dialog_divider"
        android:dividerHeight="1.0dip"
        android:listSelector="@drawable/list_selector_transition"
        android:scrollingCache="false" />

</LinearLayout>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:dither="true"
            android:shape="oval" >
            <solid android:color="#2e3f4e" />
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape android:shape="oval" >
            <solid android:color="#2e3f4e" />

            <stroke
                android:width="3dp"
                android:color="#fff" />

            <size
                android:height="30dp"
                android:width="30dp" />
        </shape>
    </item>
</layer-list>
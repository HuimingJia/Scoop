<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/profile_layout"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"       
            tools:context="com.scroop.android.activity.ScroopActivity" >            
           <com.coop.android.activity.view.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res/com.srcoop.android.activity"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:src="@color/press_blue"
                android:scaleType="fitCenter" 
                />
        <com.coop.android.activity.view.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res/com.srcoop.android.activity"
                android:id="@+id/iv_profile_selectphoto"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/background_profile"
                android:scaleType="fitCenter" />
        </FrameLayout>
        
 

        <LinearLayout
         android:id="@+id/profilefragment_layout_board"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_board3"
        android:orientation="vertical"
        android:padding="2dp"
        android:layout_margin="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"            
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingTop="15dp" >

                <TextView
                    style="@style/profile_layout_label"
                    android:layout_marginLeft="12dp"
                    android:text="姓名"
                    android:textColor="@color/press_blue" />

                <EditText
                    android:id="@+id/et_profile_username"
                    style="@style/profile_layout_edit"
                    android:layout_marginLeft="30dp"
                    android:singleLine="true"
                    android:textColor="@color/press_blue"/>
              
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#1f5a75" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_profile_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingTop="15dp" >

                <TextView
                    style="@style/profile_layout_label"
                    android:layout_marginLeft="12dp"
                    android:text="邮箱" 
                    android:textColor="@color/press_blue"/>

                <TextView
                    android:id="@+id/tv_profile_email"
                    style="@style/profile_layout_label"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/press_blue"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#1f5a75" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_profile_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingTop="15dp" >

                <TextView
                    style="@style/profile_layout_label"
                    android:layout_marginLeft="12dp"
                    android:text="电话"
                    android:textColor="@color/press_blue" />

                <EditText
                    android:id="@+id/et_profile_phone"
                    style="@style/profile_layout_edit"
                    android:layout_marginLeft="30dp"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:singleLine="true"
                    android:textColor="@color/press_blue"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#1f5a75" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_profile_major"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingTop="15dp" >

                <TextView
                    style="@style/profile_layout_label"
                    android:layout_marginLeft="12dp"
                    android:text="专业" 
                    android:textColor="@color/press_blue"/>

               <EditText
                    android:id="@+id/tv_profile_major"
                    style="@style/profile_layout_edit"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/press_blue"
                    
                    android:singleLine="true"/>
               
            </LinearLayout>
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>